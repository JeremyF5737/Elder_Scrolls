<Book>
    <book_title ref="Redoran Cooking Secrets">Redoran Cooking Secrets</book_title>
    <writer who="Anonymous" listed="no">Anonymous</writer>
    <Acquisition>
        <location ref="Ald'ruhn" visitable="yes">Ald'ruhn</location>
        <location ref="Llethri Manor" visitable="yes">Llethri Manor</location>
        <quest ref="Redoran Cookbook">Redoran Cookbook</quest>
